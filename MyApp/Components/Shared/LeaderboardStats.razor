@using MyApp.ServiceInterface

<DataGrid Items=@Results TableStyle="TableStyle.Simple">
    <Column Field="(LeaderboardStat x) => x.Rank">
        <Header>
            <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-50">@Title</h2>
        </Header>
        <Template>
            <div class="mt-2 flex items-center text-gray-900 dark:text-gray-50 w-80">
                <div class="mr-4 text-gray-900 dark:text-gray-50 text-2xl">@(context.Rank).</div>
                <img src="@context.AvatarUrl" alt="Avatar" class="w-16 h-16 mr-4"/>
                <div class="flex-1">
                    <h3 class="text-xl font-semibold">@context.DisplayName</h3>
                    <div class="text-base text-gray-600 dark:text-gray-300">@context.Stat</div>
                </div>
            </div>
        </Template>
    </Column>
</DataGrid>

@code {
    [Parameter] public required string Title { get; set; }
    [Parameter] public required List<LeaderboardStat> Results { get; set; } = [];
}
